### Supabase
# URL to your Supabase project (include the `https://` prefix)
NEXT_PUBLIC_SUPABASE_URL=

# Publishable key for your Supabase project. Do NOT use the service role key in the client.
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=

# Service role key is used on the server to perform writes during batch email sends.
# Never expose this key in the browser. It is optional if you use RPC functions instead.
SUPABASE_SERVICE_ROLE_KEY=

### SMTP configuration
# Hostname of your SMTP server (e.g. smtp.mailgun.org)
SMTP_HOST=

# Port for SMTP (e.g. 587 for TLS)
SMTP_PORT=

# Username for authentication
SMTP_USER=

# Password for authentication
SMTP_PASS=

# Whether to use a secure connection (true for port 465, false for STARTTLS)
SMTP_SECURE=false

# Name to show in the From header
MAIL_FROM_NAME="Promo Campaigns"

# Address to show in the From header
MAIL_FROM_EMAIL=noâ€‘reply@example.com

### Other
# Maximum number of recipients to process per worker call
EMAIL_BATCH_SIZE=20
